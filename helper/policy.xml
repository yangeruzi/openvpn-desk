<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">

<policyconfig>

  <action id="in.yangz.vpn.helper">
    <description>Yangz Linux VPN Client</description>
    <message>Authentication is required to manage VPN connections</message>

    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>

    <annotate key="org.freedesktop.policykit.exec.path">
      /usr/lib/yangzvpn/helper.py
    </annotate>

    <annotate key="org.freedesktop.policykit.exec.allow_gui">
      true
    </annotate>
  </action>

</policyconfig>
